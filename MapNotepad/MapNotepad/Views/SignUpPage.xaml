<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MapNotepad.Controls"
             xmlns:behaviors="clr-namespace:MapNotepad.Behaviors"
             x:Name="_this"
             x:Class="MapNotepad.Views.SignUpPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">

        <controls:ValidationEntryControl x:Name="emailEntry" 
                                         FieldLabel="Email" 
                                         Placeholder="user@gmail.com"
                                         Text="{Binding BindingContext.Email, Source={x:Reference _this}}"
                                         Style="{StaticResource ValidationEntryControlStyle}">

            <controls:ValidationEntryControl.Behaviors>

                <behaviors:EmailValidationBehavior x:Name="emailValidation"/>
                
            </controls:ValidationEntryControl.Behaviors>
            
        </controls:ValidationEntryControl>

        <controls:ValidationEntryControl FieldLabel="Name" 
                                         Placeholder="Alex"
                                         Text="{Binding BindingContext.Name, Source={x:Reference _this}}"
                                         Style="{StaticResource ValidationEntryControlStyle}">

        </controls:ValidationEntryControl>

        <controls:ValidationEntryControl x:Name="passwordEntry" 
                                         FieldLabel="Password"
                                         Placeholder="••••••••"
                                         IsPassword="True"
                                         Text="{Binding BindingContext.Password, Source={x:Reference _this}}"
                                         Style="{StaticResource ValidationEntryControlStyle}">

            <controls:ValidationEntryControl.Behaviors>

                <behaviors:PasswordValidationBehavior x:Name="passwordValidation"/>
                
            </controls:ValidationEntryControl.Behaviors>
            
        </controls:ValidationEntryControl>

        <controls:ValidationEntryControl x:Name="confirmPasswordEntry"
                                         FieldLabel="Confirm password"
                                         Placeholder="••••••••"
                                         IsPassword="True"
                                         Text="{Binding BindingContext.ConfirmPassword, Source={x:Reference _this}}"
                                         Style="{StaticResource ValidationEntryControlStyle}">

            <controls:ValidationEntryControl.Behaviors>

                <behaviors:ConfirmPasswordValidationBehavior x:Name="confirmPasswordValidation" CompareToEntry="{Binding Text, Source={x:Reference passwordEntry}}"/>
                
            </controls:ValidationEntryControl.Behaviors>
            
        </controls:ValidationEntryControl>

        <Button Text="Sign Up"
                Style="{StaticResource SignButtonStyle}"
                Command="{Binding SignUpCommand}"
                Margin="20"
                IsEnabled="{Binding BindingContext.IsSignUpEnabled, Source={x:Reference _this}}">
            
            <Button.Triggers>
                
                <MultiTrigger TargetType="Button">
                    
                    <MultiTrigger.Conditions>
                        
                        <BindingCondition Binding="{Binding Source={x:Reference emailValidation}, Path=IsValid}"
                                          Value="True"/>
                        
                        <BindingCondition Binding="{Binding Source={x:Reference passwordValidation}, Path=IsValid}"
                                          Value="True"/>
                        
                        <BindingCondition Binding="{Binding Source={x:Reference confirmPasswordValidation}, Path=IsValid}"
                                          Value="True"/>
                        
                    </MultiTrigger.Conditions>
                    
                    <Setter Property="IsEnabled" Value="True"/>
                    
                </MultiTrigger>
                
            </Button.Triggers>
            
        </Button>
        
    </StackLayout>
    
</ContentPage>
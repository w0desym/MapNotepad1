<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MapNotepad.Controls"
             xmlns:behaviors="clr-namespace:MapNotepad.Behaviors"
             xmlns:validators="clr-namespace:MapNotepad.Validators"
             x:Name="_this"
             x:Class="MapNotepad.Views.SignUpPage"
             Title="{Binding Title}">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="95"/>
                <RowDefinition Height="95"/>
                <RowDefinition Height="95"/>
                <RowDefinition Height="95"/>
            </Grid.RowDefinitions>

            <controls:CustomEntryControl Grid.Row="0"
                                             x:Name="emailEntry" 
                                         FieldLabel="Email" 
                                         Placeholder="user@gmail.com"
                                         Text="{Binding BindingContext.Email, Source={x:Reference _this}}"
                                         Style="{StaticResource CustomEntryControlStyle}">

                <controls:CustomEntryControl.Behaviors>

                    <behaviors:ValidationBehavior x:Name="emailValidation"
                                                  ValidationType="Email"
                                                  Message="Email is not valid"/>

                </controls:CustomEntryControl.Behaviors>

            </controls:CustomEntryControl>

            <controls:CustomEntryControl Grid.Row="1"
                                             FieldLabel="Name" 
                                         Placeholder="Alex"
                                         Text="{Binding BindingContext.Name, Source={x:Reference _this}}"
                                         Style="{StaticResource CustomEntryControlStyle}">

            </controls:CustomEntryControl>

            <controls:CustomEntryControl Grid.Row="2"
                                             x:Name="passwordEntry" 
                                         FieldLabel="Password"
                                         Placeholder="••••••••"
                                         IsPassword="True"
                                         Text="{Binding BindingContext.Password, Source={x:Reference _this}}"
                                         Style="{StaticResource CustomEntryControlStyle}">

                <controls:CustomEntryControl.Behaviors>

                    <behaviors:ValidationBehavior x:Name="passwordValidation"
                                                  IsPassword="True"
                                                  PasswordMinimumLength="8"
                                                  ValidationType="Password"
                                                  Message="Should be longer than 8 characters"
                                                  SecondMessage="At least 1 lowercase, uppercase and number"/>

                </controls:CustomEntryControl.Behaviors>

            </controls:CustomEntryControl>

            <controls:CustomEntryControl Grid.Row="3"
                                         x:Name="confirmPasswordEntry"
                                         FieldLabel="Confirm password"
                                         Placeholder="••••••••"
                                         IsPassword="True"
                                         Text="{Binding BindingContext.ConfirmPassword, Source={x:Reference _this}}"
                                         Style="{StaticResource CustomEntryControlStyle}">

                <controls:CustomEntryControl.Behaviors>

                    <behaviors:ValidationBehavior x:Name="confirmPasswordValidation"
                                                  MatchWith="{Binding Text, Source={x:Reference passwordEntry}}"
                                                  IsPassword="True"
                                                  Message="Passwords should match"/>

                </controls:CustomEntryControl.Behaviors>

            </controls:CustomEntryControl>

        </Grid>

        <Button Grid.Row="3"
                    Text="Sign Up"
                Style="{StaticResource SignButtonStyle}"
                Command="{Binding SignUpCommand}"
                IsEnabled="{Binding BindingContext.IsSignUpEnabled, Source={x:Reference _this}}">

            <Button.Triggers>

                <MultiTrigger TargetType="Button">

                    <MultiTrigger.Conditions>

                        <BindingCondition Binding="{Binding Source={x:Reference emailValidation}, Path=IsValid}"
                                          Value="True"/>

                        <BindingCondition Binding="{Binding Source={x:Reference passwordValidation}, Path=IsValid}"
                                          Value="True"/>

                        <BindingCondition Binding="{Binding Source={x:Reference confirmPasswordValidation}, Path=IsValid}"
                                          Value="True"/>

                    </MultiTrigger.Conditions>

                    <Setter Property="IsEnabled" Value="True"/>

                </MultiTrigger>

            </Button.Triggers>

        </Button>

    </Grid>

</ContentPage>